                    <Style TargetType="{x:Type Border}">
                        <Setter Property="CornerRadius" Value="8"/>
                    </Style>
                </Button.Resources>
                <StackPanel Orientation="Horizontal">
                    <Image Source="C:\Users\Старчак Данил\Downloads\icons8-поиск-50.png" Width="20" Height="20"/>
